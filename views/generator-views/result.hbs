<h2>Results.</h2>

<div class="flex-center results">
	

{{#if spotifyResults}}
	<div class="spotify-list card">	

	<h2>Spotify</h2>
		{{#each spotifyResults}}

			<div class="one-track">	
				{{>spotify_track}}
			</div>

		{{/each}}

	</div>
{{/if}}

{{#if deezerResults}}
	<div class="deezer-list card">

	<h2>Deezer</h2>
		{{#each deezerResults}}
			<div class="one-track">
				{{>deezer_track}}
			</div>
		{{/each}}
	</div>
{{/if}}

</div>